<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/settings_title">

    <SwitchPreferenceCompat
        android:key="onepod_mode_pref"
        android:defaultValue="false"
        android:title="@string/onepod_mode_title" 
        android:summary="@string/onepod_mode_summary" />

    <SwitchPreferenceCompat
        android:key="auto_play_pref"
        android:defaultValue="false"
        android:title="@string/auto_play_title"
        android:summary="@string/auto_play_summary" />

    <SwitchPreferenceCompat
        android:key="auto_pause_pref"
        android:defaultValue="false"
        android:title="@string/auto_pause_title"
        android:summary="@string/auto_pause_summary" />

    <SwitchPreferenceCompat
        android:key="low_latency_audio_pref"
        android:defaultValue="false"
        android:title="@string/low_latency_audio_title"
        android:summary="@string/low_latency_audio_summary" />
</PreferenceScreen>
